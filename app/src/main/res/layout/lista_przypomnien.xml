<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:context=".LinearLayout" >

        <TextView
            android:id="@+id/tytul"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginRight="50px"
            android:paddingLeft="10px"
            android:paddingTop="20px"
            android:text="Treść"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20px">

            <TextView
                android:id="@+id/data"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tytul"
                android:paddingLeft="10px"
                android:paddingTop="20px"
                android:text="0-0-0000"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/czas"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_weight="0.50"
                android:paddingTop="20px"
                android:text="0:00"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/usunFiszke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20px"
                android:paddingLeft="10px"
                android:layout_alignEnd="@+id/tytul"
                android:src="@drawable/ikona_usun" />

            <ImageView
                android:id="@+id/edycjaFiszki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:paddingTop="20px"
                android:paddingLeft="10px"
                android:layout_toStartOf="@+id/usunPrzycisk"
                android:layout_toRightOf="@id/usunPrzycisk"
                android:src="@drawable/ikona_edytuj" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>