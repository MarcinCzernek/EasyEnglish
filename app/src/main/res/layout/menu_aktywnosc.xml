<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="#00B0FF">

    <Button
        android:id="@+id/odtwarzaczPrzycisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="159dp"
        android:onClick="createNewIntentPlayer"
        android:text="Odtwarzacz"
        android:backgroundTint="@color/white"
        android:textColor="#00B0FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoObrazek" />

    <Button
        android:id="@+id/przypomnieniaPrzycisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="createNewIntentReminder"
        android:text="Przypomnienia"
        android:backgroundTint="@color/white"
        android:textColor="#00B0FF"
        app:layout_constraintEnd_toEndOf="@+id/odtwarzaczPrzycisk"
        app:layout_constraintStart_toStartOf="@+id/odtwarzaczPrzycisk"
        app:layout_constraintTop_toBottomOf="@+id/odtwarzaczPrzycisk" />

    <Button
        android:id="@+id/nagrywaczPrzycisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="createNewIntentRecorder"
        android:text="Nagrywanie"
        android:backgroundTint="@color/white"
        android:textColor="#00B0FF"
        app:layout_constraintEnd_toEndOf="@+id/przypomnieniaPrzycisk"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/przypomnieniaPrzycisk"
        app:layout_constraintTop_toBottomOf="@+id/przypomnieniaPrzycisk" />

    <Button
        android:id="@+id/wyjscie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WyjÅ›cie"
        android:backgroundTint="@color/white"
        android:textColor="#00B0FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nagrywaczPrzycisk"
        app:layout_constraintStart_toStartOf="@+id/nagrywaczPrzycisk"
        app:layout_constraintTop_toBottomOf="@+id/nagrywaczPrzycisk" />

    <ImageView
        android:id="@+id/logoObrazek"
        android:layout_width="253dp"
        android:layout_height="238dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/path926" />

</androidx.constraintlayout.widget.ConstraintLayout>